{
  "name": "@skazi-web/react-ts-ui-kit-starter",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "engines": {
    "node": ">=18.18.2",
    "yarn": ">=1.22.21"
  },
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "bump": "npm version patch -m \"React UI Kit version updated to v%s\"",
    "bump:minor": "npm version minor -m \"React UI Kit version updated to v%s\"",
    "bump:major": "npm version major -m \"React UI Kit version updated to v%s\""
  },
  "peerDependencies": {
    "react": "^18.3.1",
    "react-dom": "^18.3.1"
  },
  "dependencies": {
    "clsx": "^2.1.1",
    "glob": "^10.4.2",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "rollup": "^4.18.0",
    "vite-plugin-dts": "^3.9.1"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "@vitejs/plugin-react": "^4.3.1",
    "eslint": "^8.57.0",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-refresh": "^0.4.7",
    "sass": "^1.77.6",
    "typescript": "^5.2.2",
    "vite": "^5.3.1"
  },
  "files": [
    "dist"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "./dist/style.css": "./dist/style.css",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "sideEffects": [
    "**/*.css"
  ]
}
